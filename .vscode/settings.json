{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "json",
    ],
    "editor.indentSize": "tabSize",
    "editor.tabSize": 2,
    "editor.detectIndentation": false
}